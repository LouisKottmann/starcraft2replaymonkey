<Window x:Class="Sc2ReplayMonkey.WindowEnlargeMapImage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WindowEnlargeMapImage" Height="Auto" Width="Auto" WindowStartupLocation="CenterOwner" Background="#00005555" AllowsTransparency="True" WindowStyle="None">
    <GroupBox Style="{StaticResource noBorderWindow}" Header="Enlarged Map">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Background="#00005555" Style="{StaticResource NoChromeButton}" Grid.Row="0" Grid.Column="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Click="Button_Click">
                <Image Name="largeImage" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
            </Button>
        </Grid>
    </GroupBox>
</Window>
